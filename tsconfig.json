{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            // "@/*": [
            //    "./*"
            // ],
            "nodemodules": ["./node_modules"],
            "@components": ["./components"],
            "@components/*": ["./components/*"],
            "@pages": ["./pages"],
            "@pages/*": ["./pages/*"],
            "@animations": ["./animations"],
            "@animations/*": ["./animations/*"],
            "@layouts": ["./layouts"],
            "@layouts/*": ["./layouts/*"],
            "@hooks": ["./hooks"],
            "@hooks/*": ["./hooks/*"],
            "@types": ["./types"],
            "@theme": ["./themes"],
            "@utils": ["./utils"],
            "@queries": ["./redux/queries"],
            "@queries/*": ["./redux/queries/*"],
            "@constants": ["./constants"],
            "@constants/*": ["./constants/*"],
            "@hoc": ["./hoc"],
            "@hoc/*": ["./hoc/*"],
            "@partials": ["./partials"],
            "@partials/*": ["./partials/*"],
            "@modals": ["./modals"],
            "@modals/*": ["./modals/*"],
            "@scripts": ["./scripts"],
            "@scripts/*": ["./scripts/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        "pages/portals/admin/subscribers",
        "pages/portals/admin/rto/[id]/student-list.tss",
        "pages/portals/admin/e-sign/[id]",
        "./jest-setup.ts",
        "pages/portals/management/teams/members/[memberId]"
    ],
    "exclude": ["node_modules"]
}
