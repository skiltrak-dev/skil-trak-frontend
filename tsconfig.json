{
    "compilerOptions": {
        "target": "esnext",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "noEmit": true,
        "esModuleInterop": true,
        "module": "esnext",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "incremental": true,
        "baseUrl": ".",
        "paths": {
            "@components": ["./components"],
            "@components/*": ["./components/*"],
            "@animations": ["./animations"],
            "@animations/*": ["./animations/*"],
            "@layouts": ["./layouts"],
            "@layouts/*": ["./layouts/*"],
            "@hooks": ["./hooks"],
            "@hooks/*": ["./hooks/*"],
            "@types": ["./types"],
            "@theme": ["./themes"],
            "@utils": ["./utils"],
            "@query": ["./redux/queries"],
            "@query/*": ["./redux/queries/*"],
            "@constants": ["./constants"],
            "@constants/*": ["./constants/*"],
            "@partials": ["./partials"],
            "@partials/*": ["./partials/*"],
        }
    },
    "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules"]
}
